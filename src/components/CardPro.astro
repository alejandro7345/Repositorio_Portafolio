---

export interface Props {
    title: string;
    description: string;
    link: string;
}

const { title, description, link } = Astro.props;

---

<div class="bg-white p-6 rounded shadow">
    <h3 class="font-semibold text-xl mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <a href={link} id="enla"class="text-light-blue hover:text-dark-blue">Ver más →</a>
</div>


<style>

    #enla{
        color:darkslategrey ;
        background: gainsboro;
        padding: 5px;
        border-radius: 3px;
    }
</style>