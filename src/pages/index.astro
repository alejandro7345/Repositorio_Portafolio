---
import Layout from "../layouts/Layout.astro"
import TechCard from "../components/CardTecno.astro"

import Sections from "../components/Sections.astro";


import { getCollection } from "astro:content";

interface TechItem {
	title: string;
	tech: string[];
}




const lengitems:TechItem[]=[
{
	title:"Frontend",
	tech:["HTML","CSS"]
},
{
	title:"Backend",
	tech:["Python","Java","PHP","C#"]
},
{
	title:"Base de Datos",
	tech:["SQL","PL/pgSQL"]
},


]
const techItems: TechItem[] = [
	
	{
		title: "Frontend",
		tech: ["Tailwind CSS","React"]
	},
	{
		title: "Backend",
		tech: ["Node.js","ASP.NET"]
	},
	
	{
		title: "Base de Datos",
		tech: ["MYSQL","MongoDB"]
	},
	{
		title:"Herramientas ",
		tech:["Git", "GitHub", "VS Code","visual estudio","node.js","php-Myadmin","fireCloud","NetBeans","DreamWeaber"]
	}
]

---
<Layout title="Portafolio-Sobre Mi">


	<div class="content"> </div>
	<Sections 
	title="¿Quien Soy?"
	body="mi nombre es alejandro caballero  ,soy estudiante de la carrera de ingenieria en sistemas,me gusta adquirir nuevos conocimientos y resolver problemas q me ayuden a crecer como profesional .  "
	/>
	


        <section id="technologies" class="mb-16">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Mis Lenguajes</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">

				{ lengitems.map( ( item ) => (
					<TechCard title={item.title} tech={ item.tech } />
				) ) }

            </div>
        </section>

		<section id="technologies" class="mb-16">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Mis Tecnologías</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">

				{ techItems.map( ( item ) => (
					<TechCard title={item.title} tech={ item.tech } />
				) ) }

            </div>
        </section>





		
    </main>
</Layout>
<style>

#technologies{
	margin: 100px;
	background-color:rgb(193, 193, 206);
	padding: 40px;
	border-radius: 7px;
	box-shadow: 0 10px 5px rgba(0, 0, 0, 0.1);
	
}
#technologies>h2{
	text-align: center;
	margin-bottom: 30px;
}

.content{
	background-color:rgb(193, 193, 206);
		width: 100%;
		height: auto;
		align-items: center;
		justify-content: center;
		display: flex;
		padding: 40px;
	}
	img{
		width: 130px;
		height: auto;
		border-radius: 10px;
		
	}
</style>