---

import Layout from "../layouts/Layout.astro"
import ProjectCard from "../components/CardPro.astro";
import { getCollection } from "astro:content";
import Sections from "../components/Sections.astro";

interface ProjectItem{
	slug: string;
	data: {
		title: string;
		shortDescription: string;
	}
}

const projects: ProjectItem[] = await getCollection("projects");
---


<Layout title="Portafolio-Proyectos">

<Sections

title="Proyectos Desarrollados  "
body="Recopilacion de cada uno de los proyectos trabajados y temas de experiencia"

/>





    <section id="projects">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Proyectos Trabajados</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">


            { projects.map( ( p ) => (
                <ProjectCard 
                    title={ p.data.title }
                    description={ p.data.shortDescription }
                    link={ `/projects/${ p.slug }` }
                />
            ) ) }

        </div>
        

    </section>







   </main>



</Layout>

<style>


#projects{
	margin: 50px;
	background-color:rgb(193, 193, 206);
	padding: 40px;
	border-radius: 7px;
    box-shadow: 0 10px 5px rgba(0, 0, 0, 0.1);
	
}
#projects>h2{
	text-align: center;
	margin-bottom: 30px;
}
</style>